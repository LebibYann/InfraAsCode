project_id          = "your-gcp-project-prd"
region              = "europe-west1"
environment         = "prd"
network_name        = "student-vpc"
public_subnet_cidr  = "10.30.0.0/24"
private_subnet_cidr = "10.20.0.0/16"
bucket_name         = "your-bucket-name-prd"

# Cloud SQL Configuration
db_name       = "app_database"
db_user       = "app_user"
cloudsql_tier = "db-g1-small"  # Slightly better for production

# GKE Node Pool Autoscaling (prd: larger scale)
gke_min_node_count = 2
gke_max_node_count = 4

# Application Deployment
app_image_repository = "gcr.io/your-gcp-project-prd/iac"
app_image_tag        = "latest"
app_min_replicas     = 2
app_max_replicas     = 5
app_cpu_target       = 70

# GitHub Configuration
# IMPORTANT: GitHub App secrets are stored in Google Secret Manager
# Follow the SETUP-GITHUB-RUNNERS.md guide to create the GitHub App and store secrets
# The secret names below must match those created in Secret Manager
github_app_id_secret         = "github-app-id-prd"
github_installation_id_secret = "github-installation-id-prd"
github_private_key_secret    = "github-private-key-prd"

github_repository_url = "https://github.com/your-org/your-repo"
github_repository     = "your-org/your-repo"
github_organization   = "your-org"

# GitHub Runners Configuration
runner_machine_type   = "e2-standard-4"  # More powerful for production
runner_disk_size      = 100  # More disk space for production
min_runner_nodes      = 0  # Scale to zero when no workflows
max_runner_nodes      = 3  # Maximum 3 nodes for production

# Runner autoscaling
enable_runner_autoscaling = true
min_runner_replicas       = 0  # Scale to zero
max_runner_replicas       = 3  # Maximum 3 concurrent runners
runner_replicas           = 0  # Initial value (ignored with autoscaling)
runner_labels             = ["self-hosted", "kubernetes", "gke", "linux", "x64", "prd"]
